{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Hello
      {{ user.name }}</strong>
    <p>Start a schedule by choosing<br/>a professional below:</p>

    <ul class="providers">
      {% for provider in providers %}
        <li class="provider">
          <div>
            <img src="/files/{{ provider.avatar }}"/>
            <strong>{{ provider.name }}</strong>
          </div>
          <a href="/app/appointments/new/{{ provider.id }}">+</a>
        </li>
      {% endfor %}
    </ul>

    <a class="logout" href="/app/logout">Logout</a>
  </div>
{% endblock %}
